## Settings and variables I always use
set -o vi
export EDITOR=vi
export PS1="\n\u@\h:\w\n-> "

## Location of common java tools
export JAVA_HOME=/home/$USER/local/java/current
export GRADLE_HOME=/home/$USER/local/gradle/current
export GROOVY_HOME=/home/$USER/local/groovy/current
export MAVEN_HOME=/home/$USER/local/groovy/current
export PATH=$JAVA_HOME/bin:$GRADLE_HOME/bin:$GROOVY_HOME/bin:$MAVEN_HOME/bin:$PATH

## Always use gradle daemon
alias gradle='gradle --daemon'

